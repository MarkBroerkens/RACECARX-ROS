<!-- -*- mode: XML -*- -->
<launch>
  <arg name="racecar_version" />
  <arg name="sensors_config"
       default="$(find racecar)/config/$(arg racecar_version)/sensors.yaml" />

  <rosparam file="$(arg sensors_config)" command="load" />

  <!-- laser -->
  <node name="laser_node"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
    <param name="serial_port"         type="string" value="/dev/rplidar"/>
    <param name="serial_baudrate"     type="int"    value="115200"/>
    <param name="frame_id"            type="string" value="laser"/>
    <param name="inverted"            type="bool"   value="false"/>
    <param name="angle_compensate"    type="bool"   value="true"/>
  </node>

  <!-- imu -->
  <arg name="razor_config_file" default="$(find racecar)/config/$(arg racecar_version)/sensors.yaml"/>
  <node pkg="razor_imu_9dof" type="imu_node.py" name="imu_node" output="screen">
    <rosparam file="$(arg razor_config_file)" command="load"/>
  </node>
</launch>
